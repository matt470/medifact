{% extends 'base.html.twig' %}

{% block title %}Liste des patients{% endblock %}

{% block body %}
    <h1>Liste des patients</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>{{ patient.id }}</td>
                <td>{{ patient.nom }}</td>
                <td>{{ patient.prenom }}</td>
                <td>{{ patient.adresse }}</td>
                <td>
                    <a href="{{ path('patient_show', {'id': patient.id}) }}">voir</a>
                    <a href="{{ path('patient_edit', {'id': patient.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas d'enregistrements trouv√©s</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('patient_new') }}">Ajouter un nouveau</a>
{% endblock %}
